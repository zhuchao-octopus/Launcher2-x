    <ImageView
        android:id="@+id/page3"
        android:layout_width="88px"
        android:layout_height="4px"
        android:layout_marginStart="20px"
        android:background="@drawable/page_level" />

    <ImageView
        android:id="@+id/page4"
        android:layout_width="88px"
        android:layout_height="4px"
        android:layout_marginStart="20px"
        android:background="@drawable/page_level" />

    <ImageView
        android:id="@+id/page5"
        android:layout_width="88px"
        android:layout_height="4px"
        android:layout_marginStart="20px"
        android:background="@drawable/page_level" />

</LinearLayout>